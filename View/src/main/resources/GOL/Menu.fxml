<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GOL.MenuController">
   <VBox fx:id="container" alignment="CENTER">
      <children>
          <Label text="%menu.language" />
          <ComboBox fx:id="languageComboBox" prefHeight="36.0" prefWidth="137.0" />
          <Label prefHeight="48.0" prefWidth="74.0" text="%menu.width">
            <padding>
               <Insets bottom="10.0" />
            </padding></Label>
          <Spinner fx:id="columns" editable="true" />
          <Label prefHeight="40.0" prefWidth="77.0" text="%menu.height" />
          <Spinner fx:id="rows" editable="true" />
          <Label prefHeight="37.0" prefWidth="101.0" text="%menu.population" />
          <ChoiceBox fx:id="population" prefHeight="26.0" prefWidth="106.0" />
          <Button onAction="#startProgram" text="%menu.start">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
          </Button>
          <Label fx:id="authorsLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="60.0" prefWidth="291.0" />
      </children>
      <padding>
         <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </VBox>

</AnchorPane>
